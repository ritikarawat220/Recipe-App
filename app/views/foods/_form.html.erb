<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div style="color: red">
      <h2 style="font-size: 15px">
        <%= pluralize(food.errors.count, "error") %> 
        prohibited this food from being saved:
      </h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= form.label :name, "Food Name:" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Food Name"%>
    </div>

    <div class="form-group">
      <%= form.label :measurement_unit, "Measurement Unit:" %>
      <%= form.text_field :measurement_unit, class: "form-control", placeholder: "Measurement Unit"%>
    </div>

    <div class="form-group">
      <%= form.label :price, "Unit Price:" %>
      <%= form.number_field :price, class: "form-control", placeholder: "Unit Price" %>
    </div>
    <%= form.submit class: "btn btn-primary", class: "btn btn-secondary" %>
<% end %>
